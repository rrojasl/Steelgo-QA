
@{
    ViewBag.Title = "CapturaReporteRT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section breadcrumb {
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblInicio"></span></a>
    </li>
    <li>
        <a href="#"><span id="ReporteRTHeader"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("CapturaReporteRT", "PND")"><span id="ReporteRTHeader"></span></a>
    </li>
}

<div id="FormCapturaReportePruebas" class="form clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">

    @*Menu superior*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="Guardar" onclick="javascript:void(0);" type="button" class="btn btn-yellow"><span id="botonGuardar"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar2"><span id="botonGuardar2"></span></a></li>
                            <li><a href="#" id="btnGuardarYNuevo"><span id="botonGuardarYNuevo"></span></a></li>
                        </ul>
                    </div>
                    <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones1"></span>
                            <span class="caretBlue"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Acciones"></ul>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
            </div>
        </div>
    </div>

    @*Controles Superior*@
    <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <label id="CapturaReporteProyecto"></label>
            <input id="inputProyecto" />
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <label id="CapturaReporteProveedor"></label>
            <input id="inputProveedor" />
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <label id="CapturaReporteRequisicion"> </label>
            <input id="inputRequisicion" />
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <label id="CapturaReporteEquipo"> </label>
            <input id="inputFuente" />
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <label id="CapturaReporteTurno"> </label>
            <input id="inputTurno" />
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">

            <label id="lblMostrar"></label>
            <input type="radio" name="Muestra" style=" width:auto;" value="SinCaptura" /><span id="lblSinCaptura"></span>
            
            <input type="radio" checked="checked" name="Muestra" style=" width:auto;" value="Todos" /><span id="lblTodos"> </span>
            
        </div>
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <button type="button" id="btnAgregar" class="btn btn-blue"><span id="CapturaReporteBotonBuscar"></span></button>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label>&nbsp;</label>
        </div>
    </div>
    
    @*GRID PARA RT*@
    <div class="row addedSectionInLine" id="gridRT">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="ContenedorGrid" class="row">
                    <div id="grid" data-role="grid" class="k-grid k-widget">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="windowGrid" style="display: none; z-index:inherit;">
    <div class="form-group">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <a class="btn btn-blue" href="#" id="GuardarDefectos"><span id="CapturaReporteGuardarPopup"></span></a>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div id="ContenedorGridPopUp">
            <div id="gridPopUp" data-role="grid" class="k-grid k-widget">
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReporte/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReporte/Handlers.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReporte/Render.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReporte/Captura.js"> </script>
