@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb {
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblInicio"></span></a>
    </li>
    <li>
        <a href="#"><span id="PinturaCargaSistemaPintura"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("CapturaAvance", "Pintura")"><span id="lblCapturaAvance"></span></a>
    </li>
}
<div id="FormCapturaAvance" class="form clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">
    @*Menu Superior*@
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="button-section editButtonSection">
                            <div class="btn-group save-group">
                                <button id="Guardar" onclick="javascript:void(0);" type="button" class="btn btn-yellow accionGuardar"><span id="botonGuardar2"></span></button>
                                <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle botonDeplegaMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caretWhite"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" id="btnGuardar" class="accionGuardar"><span id="botonGuardar"></span></a></li>
                                    <li><a href="#" id="btnGuardarYNuevo"><span id="botonGuardarYNuevo"></span></a></li>
                                </ul>

                            </div>

                            <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar"></span></a>
                        </div>
                        <div id="CapturaAvanceDivSuperior" class="button-section">
                            <a id="CapturaAvanceSuperior" href="@Url.Action("DescargaCarro","Pintura")" class="btn btn-primary"><span id="CapturaAvancebtnDescargaCarro"></span></a>
                        </div> 
                        <div class="button-section actionButtonSection">
                            <div class="dropdown action-group">
                                <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                                    <span id="botonAcciones1"></span>
                                    <span class="caretBlue"></span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="Acciones"></ul>
                            </div>
                        </div>
                        <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*Controles Superior*@
    <div class="row" id="FieldSetView">
        <div class="col-sm-2 col-md-2 col-lg-2" id="carroDiv">
            <label><span id="CapturaAvanceCarro"></span></label>
            <input id="inputCarro" />
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2" id="ComponenteDiv">
            <label><span id="CapturaAvanceComponente" class="security_required"></span></label>
            <input id="inputComponente" />
        </div>

        <div class="col-sm-2 col-md-2 col-lg-2" id="InputDiv">
            <label id="CapturaArmadoHeaderSpoolID"></label>
            <input style="width:40%" id="InputOrdenTrabajo" class="item-select" />-<input id="InputID" placeholder="ID" style="width:40%;" />
        </div>
        
        <div class="col-sm-2 col-md-2 col-lg-2" id="">
            <label id="">&nbsp;</label>
            <button type="button" id="ButtonAgregar" class="btn btn-blue"><span id="botonAgregar"></span></button>
        </div> 
    </div>
    
    @*GRID*@
    <div class="row addedSectionInLine">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row FieldSetView">
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <label><span id="CapturaAvanceFechaShotblast"></span></label>
                        <input id="FechaShotBlast" />
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <label><span id="CapturaAvanceFechaPrimario"></span></label>
                        <input id="Fechaprimario" />
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <label><span id="CapturaAvanceShotBlastero"></span></label>
                        <input id="inputShotBlastero" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <label><span id="CapturaAvancePintor"></span></label>
                        <input id="inputPintor" />
                    </div>
                    <div class="btn-group col-sm-3 col-md-3 col-lg-3" role="group" id="LlenaCapturaAvanceIntAcabadoDiv">
                        <label id="CapturaAvanceIntAcabadoHeaderLlenadoMasivo"></label>
                        <input type="radio" id="LlenaTodos" name="LLena" style="width:auto;" value="Todos" /><span id="CapturaLlenadoMasivoTodos"></span>
                        <input type="radio" id="LlenaVacios" name="LLena" style="width:auto;" value="Vacios" /><span id="CapturaLlenadoMasivoVacios"></span>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <label id="">&nbsp;</label>
                        <button type="button" id="ButtonPlanchar" class="btn btn-blue"><span id="botonAplicar"></span></button>
                    </div>
                </div>
            </div> 
            <div id="ContenedorGrid" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="grid" data-role="grid" class="k-grid k-widget"></div>
            </div>  
        </div>
        <input id="hdAccionFiltrado" type="hidden" />
    </div>
    
    @*Popup*@
    <div id="windowDownload" style="display:none;">
        <span id="CapturaAvanceCuadrante"></span> 
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-sm-5 col-md-5 col-lg-5">
                        <input id="inputCuadrante" />
                    </div>
                </div>
                <div class="row"> 
                    <div class="col-sm-5 col-md-5 col-lg-5">
                        <input type="button" class="btn btn-blue" id="CapturaAvanceDescargar" />
                    </div> 
                </div>
            </div> 
        </div> 
    </div>
    <br /><br />

    @*Menu Inferior*@
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix"> 
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="Guardar" onclick="javascript:void(0);" type="button" class="btn btn-yellow accionGuardar"><span id="botonGuardar3"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle botonDeplegaMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar4" class="accionGuardar"><span id="botonGuardar4"></span></a></li>
                            <li><a href="#" id="btnGuardarYNuevo2"><span id="botonGuardarYNuevo1"></span></a></li>
                        </ul>
                    </div>

                    <a id="btnCancelar2" class="btn btn-black"><span id="botonCancelar2"></span></a>
                </div>
                <div id="CapturaAvanceDivInferior" class="button-section">
                    <a id="CapturaAvanceInferior" href="@Url.Action("DescargaCarro","Pintura")" class="btn btn-primary"><span id="CapturaAvancebtnDescargaCarro2"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones2"></span>
                            <span class="caretBlue"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Acciones"></ul>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a> 
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvance/Render.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvance/Seguridad.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvance/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvance/Handlers.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvance/Captura.js"></script>


<script>
    @section JavascriptDocumentReadyFunctions {
    $authorizationModel["Captura Avance"] = $CapturaAvanceModel;
    }
</script>
